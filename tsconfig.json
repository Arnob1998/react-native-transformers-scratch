{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,            // Allows JavaScript files to be included
    "checkJs": false,           // Set to true if you want TypeScript to check JavaScript files
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",                  // Include JavaScript files
    "**/*.jsx",                 // Include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
